---
layout: project
---

.container
  .row.body
    .col-lg-12

      - if page.logo
        %img{:title => "Logo", :src => expand_link(page.logo), :style => "float:right", :width => "192"}

      %h2.title
        = t('.overview')


      - if page.overview
        %p
          = page.overview

      %a{:href => "/sigs", :target => "_blank"}
        = t('.back-to-home')
        
  .row
    .col-lg-12
      %h2.title
        = t('.members')

    .col-lg-4
      - if page.leads
        Lead#{if page.leads.length > 1 then 's' end}:

        %ul
          - page.leads.each do |item|
            %li
              %a{:href => "https://github.com/#{item.github}", :target => "_blank"}
                = item.name

      - if page.organizations
        = t('.organizations')
        %ul
          - page.organizations.each do |item|
            %li
              %a{:href => "https://github.com/#{item.github}", :target => "_blank"}
                = item.name

    .col-lg-4
      - if page.participants
        - part1 = page.participants.sort_by { |x| x.name }
        - part2 = []
        - if part1.length > 8
          - part1,part2 = part1.each_slice( (part1.size/2.0).round ).to_a

        = t('.participants')
        %ul
          - part1.each do |item|
            %li
              %a{:href => "https://github.com/#{item.github}", :target => "_blank"}
                = item.name

    .col-lg-4
      - if page.participants
        &nbsp;
        %ul
          - part2.each do |item|
            %li
              %a{:href => "https://github.com/#{item.github}", :target => "_blank"}
                = item.name


  .row
    .col-lg-12
      %h2.title
        = t('.description')

      = content

      %a{:href => "/sigs", :target => "_blank"}
        = t('.back-to-home')

